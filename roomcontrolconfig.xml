<Extensions>
  <Version>1.5</Version>
  <Panel>
    <PanelId>panel_1</PanelId>
    <Type>Statusbar</Type>
    <Icon>Lightbulb</Icon>
    <Order>1</Order>
    <Color>#FFB400</Color>
    <Name>Lighting</Name>
    <Page>
      <Name>Lighting</Name>
      <Row>
        <Name>Power</Name>
        <Widget>
          <WidgetId>power_button</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Brightness</Name>
        <Widget>
          <WidgetId>brightness_text</WidgetId>
          <Name>?</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>brightness_slider</WidgetId>
          <Type>Slider</Type>
          <Options>size=3</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Color</Name>
        <Widget>
          <WidgetId>red_button</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=red</Options>
        </Widget>
        <Widget>
          <WidgetId>green_button</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=green</Options>
        </Widget>
        <Widget>
          <WidgetId>blue_button</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=blue</Options>
        </Widget>
        <Widget>
          <WidgetId>yellow_button</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=yellow</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
  </Panel>
  <Panel>
    <PanelId>panel_2</PanelId>
    <Type>Statusbar</Type>
    <Icon>Media</Icon>
    <Order>2</Order>
    <Color>#FF3D67</Color>
    <Name>Sound </Name>
    <Page>
      <Name>Sound</Name>
      <Row>
        <Name>Mute/Unmute</Name>
        <Widget>
          <WidgetId>mute</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=speaker</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Volume</Name>
        <Widget>
          <WidgetId>volume_slider</WidgetId>
          <Type>Slider</Type>
          <Options>size=3</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
  </Panel>
</Extensions>
